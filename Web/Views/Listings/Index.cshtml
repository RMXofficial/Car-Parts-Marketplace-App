@model IEnumerable<Web.ViewModels.ListingIndexItemViewModel>
@using System.Security.Claims
@{
    ViewData["Title"] = L["MyListings"].Value;
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<h2>@L["MyListings"]</h2>

@if (User.Identity?.IsAuthenticated == true)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">@L["CreateNewListing"]</a>
    </p>
}

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.Listing.ImageUrl))
                    {
                        <img src="@item.Listing.ImageUrl" class="card-img-top" alt="@item.Listing.Title" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-white">@L["NoImage"]</span>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Listing.Title</h5>
                        <p class="card-text flex-grow-1">@(item.Listing.Description.Length > 100 ? item.Listing.Description.Substring(0, 100) + "..." : item.Listing.Description)</p>
                        <div class="mt-auto">
                            <p class="card-text"><strong>@L["Price"]: @item.PriceTransformation.TotalPriceWithTax.ToString("N2") @item.PriceTransformation.Currency</strong></p>
                            <p class="card-text"><small class="text-muted">@L[item.Listing.ListingType] - @item.Listing.CategoryName</small></p>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <a asp-action="Details" asp-route-id="@item.Listing.Id" class="btn btn-sm btn-primary">@L["ViewDetails"]</a>
                                @if (!string.IsNullOrEmpty(currentUserId) && (currentUserId == item.Listing.UserId || User.IsInRole("Admin")))
                                {
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Listing.Id" class="btn btn-sm btn-outline-secondary">@L["Edit"]</a>
                                        <a asp-action="Delete" asp-route-id="@item.Listing.Id" class="btn btn-sm btn-outline-danger">@L["Delete"]</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p>@L["NoListingsAvailable"]</p>
        </div>
    }
</div>
