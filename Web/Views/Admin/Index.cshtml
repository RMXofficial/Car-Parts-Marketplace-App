@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Listings</h5>
                <p class="card-text display-4">@ViewBag.TotalListings</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Active Listings</h5>
                <p class="card-text display-4">@ViewBag.ActiveListings</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Orders</h5>
                <p class="card-text display-4">@ViewBag.TotalOrders</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h4>Quick Actions</h4>
        <ul class="list-group">
            <li class="list-group-item">
                <a asp-action="Listings">Manage Listings</a>
            </li>
            <li class="list-group-item">
                <a asp-action="Orders">Manage Orders</a>
            </li>
            <li class="list-group-item">
                <form asp-action="ExportListings" method="post" class="d-inline">
                    <button type="submit" class="btn btn-link p-0">Export Listings to CSV</button>
                </form>
            </li>
            <li class="list-group-item">
                <form asp-action="ExportOrders" method="post" class="d-inline">
                    <button type="submit" class="btn btn-link p-0">Export Orders to CSV</button>
                </form>
            </li>
            <li class="list-group-item">
                <a asp-action="ImportListings">Import Listings from CSV</a>
            </li>
        </ul>
    </div>
</div>
